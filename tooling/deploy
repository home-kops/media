#!/bin/bash

set -eu

dry_run_mode="none"

while getopts "d" flag; do
    case $flag in
    d)
        echo "Running dry-run mode..."
        dry_run_mode="server"
        ;;
    \?)
        echo "Wrong argument"
        exit 1
        ;;
    esac
done

project_path="$(git rev-parse --show-toplevel)"

# Deploy common resources
echo -e "\nDeploying common resources..."
common_dir="${project_path}/common"

# Deploy namespace
kubectl apply -f "${common_dir}"/namespace.yaml
echo -e "Done!\n"

# Calibre
echo -e "\nDeploying Calibre..."
calibre_dir="${project_path}/calibre"

# Replace env variables
envsubst <"${calibre_dir}"/01-deployment.yaml | sponge "${calibre_dir}"/01-deployment.yaml
envsubst <"${calibre_dir}"/03-ingress-route.yaml | sponge "${calibre_dir}"/03-ingress-route.yaml

kubectl apply -f "${calibre_dir}" --dry-run="${dry_run_mode}"
echo -e "Done!\n"

# Jellyfin
echo -e "\nDeploying Jellyfin..."
jellyfin_dir="${project_path}/jellyfin"

# Replace env variables
envsubst <"${jellyfin_dir}"/00-deployment.yaml | sponge "${jellyfin_dir}"/00-deployment.yaml
envsubst <"${jellyfin_dir}"/02-ingress-route.yaml | sponge "${jellyfin_dir}"/02-ingress-route.yaml
envsubst <"${jellyfin_dir}"/03-cronjob.yaml | sponge "${jellyfin_dir}"/03-cronjob.yaml

kubectl apply -f "${jellyfin_dir}" --dry-run="${dry_run_mode}"
echo -e "Done!\n"
